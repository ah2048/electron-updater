{
  "name": "@capgo/electron-updater",
  "version": "0.0.1",
  "description": "OTA updates for Electron applications - 100% feature parity with capacitor-updater",
  "main": "dist/main/index.js",
  "types": "dist/main/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/main/index.d.ts",
      "import": "./dist/main/index.mjs",
      "require": "./dist/main/index.js"
    },
    "./preload": {
      "types": "./dist/preload/index.d.ts",
      "import": "./dist/preload/index.mjs",
      "require": "./dist/preload/index.js"
    },
    "./renderer": {
      "types": "./dist/renderer/index.d.ts",
      "import": "./dist/renderer/index.mjs",
      "require": "./dist/renderer/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vitest",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "electron",
    "updater",
    "ota",
    "live-update",
    "capgo",
    "hot-reload"
  ],
  "author": "Capgo",
  "license": "MPL-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/Cap-go/electron-updater.git"
  },
  "bugs": {
    "url": "https://github.com/Cap-go/electron-updater/issues"
  },
  "homepage": "https://capgo.app",
  "peerDependencies": {
    "electron": ">=20.0.0"
  },
  "devDependencies": {
    "@types/node": "^24",
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.48.1",
    "electron": "^28.0.0",
    "eslint": "^8.55.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "dependencies": {
    "extract-zip": "^2.0.1"
  }
}
